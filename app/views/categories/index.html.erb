<h4>Coupon Categories</h4>

<%= form_tag('/coupons',:method=>:get) do %>
    <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name",params[:category_id]) %>
    <%= submit_tag %>
<% end %>

<table>


