<h5>If you are a Distributor please click <a href="/pages/client_sign_up">
  <span class="sign_up">here to Sign Up</span></a></h5>

<div class = "form" align = "center" >
<%= form_for(@user) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Register" %>
    </div>
<% end %>
<%= link_to 'Back', coupons_path %>
</div>