<%= stylesheet_link_tag 'bootstrap' %>
<h1 align="center">Listing Users</h1>

<table class = "table" width="980" border="1">
  <tr>
    <th>Email</th>
    <th>Admin</th>
    <th>User Type</th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.type %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete,
                        data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>

</table>

<br />

<%= link_to 'New User', new_user_path %>
